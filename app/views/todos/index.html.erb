<div class="px-[30%] py-[5%] w-full min-h-full space-y-16 dark:bg-gray-900 flex flex-col flex-grow">
  <div class="flex flex-row space-x-2">
    <p class="mr-auto font-bold text-gray-400">
      Hello <%= current_user.email.split("@")[0] %>!
    </p>

    <div class="ml-auto flex flex-row space-x-2">
      <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "rounded-lg px-2 py-1 text-sm bg-gray-50 text-black block mt-auto hover:bg-gray-100 duration-75 dark:text-white dark:bg-gray-700 dark:hover:bg-gray-800"%>
      <%= link_to "Edit account", edit_user_registration_path, class: "rounded-lg px-2 py-1 text-sm bg-gray-50 text-black block mt-auto hover:bg-gray-100 duration-75 dark:text-white dark:bg-gray-700 dark:hover:bg-gray-800"%>    
    </div>
</div>

  <div id="todos" class="space-y-3">
    <div class="flex justify-between items-center">
      <h1 class="font-bold text-4xl dark:text-white">Todo</h1>
      <%= link_to 'New', new_todo_path, class: "rounded-lg px-2 py-1 text-sm bg-blue-600 text-white block mt-auto hover:bg-blue-700 duration-75" %>
    </div>

    <hr class="border-gray-100 dark:border-gray-700"/>
  
    <div id="todos" class="w-full space-y-4">
      <%= render @todos, completed: false %>

      <% if @todos == [] %>
        <p class="text-sm text-gray-400 py-1 pl-0.5">
          No uncompleted todos found.
        </p>
      <% end %>
    </div>
  </div>

  <div id="completed_todos" class="space-y-3">
    <div class="flex justify-between items-center">
      <h1 class="font-bold text-4xl dark:text-white">Completed</h1>
    </div>

    <hr class="border-gray-100 dark:border-gray-700"/>
  
    <div id="todos" class="w-full space-y-4">
      <%= render @completed_todos, completed: true %>

      <% if @completed_todos == [] %>
        <p class="text-sm text-gray-400 py-1 pl-0.5">
          No completed todos found.
        </p>
      <% end %>
    </div>
  </div>
</div>
